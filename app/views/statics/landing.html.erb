<div class="row">
  <div class="small-12 columns small-centered text-center feature">

    <div class="small-8 columns">
      <div class="front">
        <%= image_tag "1_a.png" %>
      </div>

      <div class="back">
        <%= image_tag "1_b.png" %>
      </div>
    </div>

    <div class="small-4 columns">
      <div class="tag">
        <div class="circleBase type1">
          <div class="text">
            <h4><%= @tshirt_feature.name %></h4>
            <p><%= @tshirt_feature.description %></p>
            <p>sizes: <%= @sizes.join(", ") %></p>
            <p>cost: <%= number_to_currency @tshirt_feature.cost %></p>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
