.row
  .small-12.columns.small-centered.text-center.feature
    .small-8.columns
      .front
        = image_tag @tshirt.front
      .back
        = image_tag @tshirt.back
    .small-4.columns
      .tag
        .circleBase.type1
          .text
            %h4= @tshirt.name
            %p= @tshirt.description
            %p
              sizes: #{@tshirt.sizes.join(", ")}
            %p
              cost: #{number_to_currency @tshirt.cost}
